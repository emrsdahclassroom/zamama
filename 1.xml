    // ===== CHUNKED DATA LOADER =====
    async function loadChunkedDataFile(onProgress) {
        const chunks = [];
        let totalLoaded = 0;
        
        for (let i = 0; i < DATA_CHUNK_COUNT; i++) {
            const chunkUrl = DATA_CHUNK_BASE_URL + i;
            console.log("Loading chunk " + i + "/" + (DATA_CHUNK_COUNT - 1) + ": " + chunkUrl);
            
            try {
                const response = await fetch(chunkUrl);
                if (!response.ok) {
                    throw new Error("HTTP " + response.status);
                }
                
                const arrayBuffer = await response.arrayBuffer();
                chunks.push(arrayBuffer);
                totalLoaded += arrayBuffer.byteLength;
                
                // Progress: 0-50% for data loading
                if (onProgress) {
                    const dataProgress = totalLoaded / ESTIMATED_TOTAL_SIZE;
                    onProgress(Math.min(dataProgress * 0.5, 0.5));
                }
                
                console.log("Chunk " + i + " loaded: " + (arrayBuffer.byteLength / 1024 / 1024).toFixed(2) + " MB");
            } catch (e) {
                console.error("Failed to load chunk " + i + ": " + e.message);
                throw e;
            }
        }
        
        // Combine all chunks
        const totalSize = chunks.reduce((acc, chunk) => acc + chunk.byteLength, 0);
        const combined = new Uint8Array(totalSize);
        let offset = 0;
        
        for (const chunk of chunks) {
            combined.set(new Uint8Array(chunk), offset);
            offset += chunk.byteLength;
        }
        
        console.log("All " + DATA_CHUNK_COUNT + " chunks combined: " + (totalSize / 1024 / 1024).toFixed(2) + " MB");
        
        // Create Blob URL
        const blob = new Blob([combined], { type: "application/octet-stream" });
        return URL.createObjectURL(blob);
    }

    function updateProgress(progress) {
